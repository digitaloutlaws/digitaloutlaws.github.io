<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Digital Outlaws • Spotify Presaves</title>
  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  <style>
    body { font-family: Arial, sans-serif; max-width: 1200px; margin: 0 auto; padding: 20px; background: #121212; color: #fff; }
    h1 { text-align: center; color: #1DB954; }
    #login { text-align: center; margin: 20px; }
    #user-info { text-align: center; color: #1DB954; }
    .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; }
    .artist-card { text-align: center; cursor: pointer; }
    .artist-card img { width: 100%; max-width: 200px; aspect-ratio: 1/1; object-fit: cover; border-radius: 50%; border: 4px solid #333; }
    .artist-card h3 { margin: 10px 0; }
    #detail { margin: 40px 0; text-align: center; }
    #presaves { list-style: none; padding: 0; max-width: 600px; margin: 20px auto; }
    #presaves li { margin: 15px 0; }
    #presaves a { display: block; padding: 15px; background: #1DB954; color: white; text-decoration: none; border-radius: 8px; font-size: 1.2em; }
    #presaves a.clicked { background: #666; }
    #admin { margin: 30px; padding: 20px; background: #222; border-radius: 8px; display: none; }
    input, button { padding: 10px; margin: 5px; font-size: 1em; }
    button { background: #1DB954; color: white; border: none; border-radius: 4px; cursor: pointer; }
  </style>
</head>
<body>
  <h1>The Digital Outlaws</h1>
  <div id="user-info"></div>
  <div id="login">
    <input type="email" id="email" placeholder="Email" />
    <input type="password" id="password" placeholder="Password" />
    <button onclick="login()">Login</button>
    <button onclick="logout()">Logout</button>
  </div>

  <div class="grid" id="artists-grid"></div>

  <div id="detail" style="display:none;">
    <button onclick="back()">← Back to artists</button>
    <h2 id="artist-name"></h2>
    <img id="artist-portrait" style="width:200px; height:200px; object-fit:cover; border-radius:50%;" />
    <div id="spotify-link"></div>
    <h3>Presaves</h3>
    <ul id="presaves"></ul>

    <div id="admin">
      <h3>Edit Presaves (artists only)</h3>
      <input id="new-title" placeholder="Title (e.g. New Single)" />
      <input id="new-url" placeholder="Presave URL" />
      <button onclick="addPresave()">Add Presave</button>
    </div>
  </div>

  <script>
    const supabase = Supabase.createClient('YOUR_SUPABASE_URL', 'YOUR_ANON_KEY');
    let currentArtist = null;

    async function loadArtists() {
      const { data: artists } = await supabase.from('artists').select('*').order('name');
      const grid = document.getElementById('artists-grid');
      grid.innerHTML = '';
      artists.forEach(artist => {
        const card = document.createElement('div');
        card.className = 'artist-card';
        card.innerHTML = `
          <img src="${artist.portrait_url || 'https://via.placeholder.com/200?text=No+Photo'}" alt="${artist.name}">
          <h3>${artist.name}</h3>
        `;
        card.onclick = () => showArtist(artist);
        grid.appendChild(card);
      });
      document.getElementById('detail').style.display = 'none';
    }

    async function showArtist(artist) {
      currentArtist = artist;
      document.getElementById('detail').style.display = 'block';
      document.getElementById('artists-grid').style.display = 'none';
      document.getElementById('artist-name').textContent = artist.name;
      document.getElementById('artist-portrait').src = artist.portrait_url || 'https://via.placeholder.com/200?text=No+Photo';
      
      const spotifyDiv = document.getElementById('spotify-link');
      if (artist.spotify_url) {
        spotifyDiv.innerHTML = `<a href="${artist.spotify_url}" target="_blank"><button style="margin:20px; padding:15px; font-size:1.2em;">Listen on Spotify ↗</button></a>`;
      } else {
        spotifyDiv.innerHTML = '';
      }

      const { data: presaves } = await supabase.from('presaves').select('*').eq('artist_id', artist.id);
      const list = document.getElementById('presaves');
      list.innerHTML = '';
      presaves.forEach(p => {
        const li = document.createElement('li');
        const a = document.createElement('a');
        a.href = p.url;
        a.textContent = p.title;
        a.target = '_blank';
        if (localStorage.getItem(p.url) === 'clicked') a.classList.add('clicked');
        a.onclick = () => {
          localStorage.setItem(p.url, 'clicked');
          a.classList.add('clicked');
        };

        // Edit/delete buttons for owner
        const session = await supabase.auth.getSession();
        if (session.data.session && session.data.session.user.id === artist.owner) {
          const editBtn = document.createElement('button');
          editBtn.textContent = 'Delete';
          editBtn.onclick = async (e) => {
            e.preventDefault();
            if (confirm('Delete this presave?')) {
              await supabase.from('presaves').delete().eq('id', p.id);
              showArtist(artist);
            }
          };
          li.appendChild(a);
          li.appendChild(editBtn);
        } else {
          li.appendChild(a);
        }
        list.appendChild(li);
      });

      // Show admin form only for owner
      const admin = document.getElementById('admin');
      const session = await supabase.auth.getSession();
      if (session.data.session && session.data.session.user.id === artist.owner) {
        admin.style.display = 'block';
      } else {
        admin.style.display = 'none';
      }
    }

    async function addPresave() {
      const title = document.getElementById('new-title').value;
      const url = document.getElementById('new-url').value;
      if (!title || !url) return alert('Fill both fields');
      await supabase.from('presaves').insert({ artist_id: currentArtist.id, title, url });
      document.getElementById('new-title').value = '';
      document.getElementById('new-url').value = '';
      showArtist(currentArtist);
    }

    function back() {
      document.getElementById('detail').style.display = 'none';
      document.getElementById('artists-grid').style.display = 'grid';
    }

    async function login() {
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      const { error } = await supabase.auth.signInWithPassword({ email, password });
      if (error) alert(error.message);
      else updateUserInfo();
    }

    async function logout() {
      await supabase.auth.signOut();
      updateUserInfo();
    }

    async function updateUserInfo() {
      const { data: { session } } = await supabase.auth.getSession();
      const info = document.getElementById('user-info');
      if (session) {
        info.textContent = `Logged in (editing enabled for your artist)`;
      } else {
        info.textContent = '';
      }
      loadArtists();
    }

    // Initial load
    updateUserInfo();
  </script>
</body>
</html>
